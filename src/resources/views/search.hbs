<form action="/search" method="POST">

    <div class="input-group md-form form-sm form-2 pl-0">
    <input name="keyword" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search">
    <div class="input-group-append">
        <button type="submit" class="input-group-text red lighten-3" id="basic-text1"><i class="fas fa-search text-grey"
            aria-hidden="true"></i></button>
    </div>
    </div>

</form>


<div class="album py-3 bg-body-tertiary">
    <div class="container">
        <div class="row">
            {{#each docs}}
            <a href={{this.link}} class="card-link" style="text-decoration: none;">
                <div class="card mx-2 mb-2" style="width: auto; transition: box-shadow 0.3s;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.summary}}</p>
                        <p class="card-text">{{#each this.tags}}<span class="badge bg-info mx-1">{{this}}</span>{{/each}}</p>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>